<%= bootstrap_flash %>

<form summary="Card form fields">
	
	<div>
		<%= label(:place, :name, "Name of Place") %>
		<%= text_field(:place, :name) %>
	</div>
	<div>
	<%= label(:place, :location_type, "Type") %>
	
		<%= radio_button(:place, :location_type, 'restaurant') %> Restaurant
		<%= radio_button(:place, :location_type, 'bar') %> Bar
		<%= radio_button(:place, :location_type, 'shop') %> Shop
		<%= radio_button(:place, :location_type, 'site') %> Site
		<%= radio_button(:place, :location_type, 'activity') %> Activity
	</div>
	<div>
		<%= label(:place, :city) %>
		<%= text_field(:place, :city) %>
	</div>
	<div>
		<%= label(:place, :country) %>
		<%= text_field(:place, :country) %>
	</div>
	<div>
		<%= f.label(:text, "Description") %>
		<%= f.text_area(:text) %>
	</div>
	<div id="photo_attachment_container">
	   <%= f.file_field :card_image %>
	</div>

</table>