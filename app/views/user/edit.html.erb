<% title "Edit Account" %>

<div class="user edit">
	<h2>Edit your account</h2>

	<%= form_for(:user, :url => {:action => 'update', :id => @user.id}) do |f| %>
		
		<%= render(:partial => "form", :locals => {:f => f}) %>

		<div class="form-buttons">
			<%= submit_tag("Update Account") %>
		</div>

	<% end %>
</div>
