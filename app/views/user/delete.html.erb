<% title "Delete User" %>

<div class="user delete">
	<h2>Delete Account</h2>

	<%= form_for(:user, :url => {:action => 'destroy', :id => @user.id}) do |f|%>

		<p>Are you sure you want to permanently delete this account?</p>

		<p class="reference-name"><%= @user.name %></p>

		<div class="form-buttons">
			<%= submit_tag("Delete Account") %>
		</div>

	<% end %>
</div>
