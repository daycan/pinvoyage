<% title "Users" %>

<div class="user index">
	<h2>Pinners</h2>

<div><%= pluralize(@users.size, "user") %></div>

	<table class="listing" summary="User list">
		<tr class="header">
			<th>Username</th>
			<th>Name</th>
			<th>Profile</th>
			<th>Friend</th>
		</tr>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.username %></td>
			<td><%= user.name %></td>
			<td></td>
			<td></td>
		</tr>
		<% end %>
	</table>

</div>

