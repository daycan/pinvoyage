<%= error_messages_for(@place) %>

<form summary="Place and Card form fields">
	<div>
		<%= f.label(:name) %>
		<%= f.text_field(:name) %>
	</div>
	<div>
		<%= f.label(:location_type, "Type") %>
		
			<%= f.radio_button(:location_type, 'restaurant') %> Restaurant
			<%= f.radio_button(:location_type, 'bar') %> Bar
			<%= f.radio_button(:location_type, 'site') %> Site
			<%= f.radio_button(:location_type, 'activity') %> Activity
	</div>
	<br>
	<div>
		<%= f.label(:city) %>
		<%= f.text_field(:city) %>
	</div>
	<div>
		<%= f.label(:country) %>
		<%= f.text_field(:country) %>
	</div>

	<%= f.fields_for(:card) do |card_form| %>
		<div>
			<%= card_form.label(:text, "Description") %>
			<%= card_form.text_area(:text, :size => "10x5") %>
		</div>
		<div id="photo_attachment_container">
		    <%= card_form.file_field :card_image %>
		</div>
	<% end %>

</table>
