<% title "My Pins" %>

<div class="pagination-centered" style="padding-top: 40px" >
  <%= image_tag('script_logo_noback.png', :size => '223x107', :alt => '<h1>PinVoyage</h1>') %>
  <br><br>

  <%= render(:partial => "header", :locals => {:searchpath => pins_path})  %>

  <div id="PinContainer" class="transitions-enabled centered clearfix masonry has-gutters">
    <% @pins.each do |pin| %>
      <div class="box col3" id="<%= pin.id.to_s %>" style="text-align:left">

        <%= render(:partial => "pin_core", :locals => {:pin => pin})  %>

        <div style="position:absolute; bottom:5px; right: 5px;">
          <%= link_to(raw('<i class="icon-eye-open"></i>'), {:action => 'show', :id => pin.id}) %>
          <%= link_to(raw('<i class="icon-pencil"></i>'), {:action => 'edit', :id => pin.id}) %>
          <%= link_to(raw('<i class="icon-trash"></i>'), delete_pin_path(pin.id)) %>
        </div>
      </div>
    <% end %>
  </div>

  <nav id="page-nav">
    <%= link_to_next_page @pins, '' %>
  </nav>
  
</div>

