<% title "Browse Pins" %>

<div class="cards index">

  <div class="span12 pagination-centered" >
    <%= image_tag('script_logo_noback.png', :size => '223x107', :alt => '<h1>PinVoyage</h1>') %>
    <br><br>
    <%= link_to("Add Pin", {:controller => 'cards', :action => 'new'}, :class => 'btn') %>
    <br><br>

    <div id="PinContainer" class="transitions-enabled centered clearfix masonry">
      <% @pins.each do |pin| %>
        <div class="box col4" id="<%= pin.id.to_s %>" style="text-align:left">

          <%= render(:partial => "pin_core", :locals => {:pin => pin})  %>

          <br>
          <div style="padding-top:8px; float:left">
            <%= link_to("Pin It", {:action => 'repin', :id => pin.card.id, :desicription => pin.description}, :class => 'btn btn-xs btn-danger') %>
          </div>
          <div style="position:absolute; bottom:5px; right: 5px;">
            <%= link_to(raw('<i class="icon-eye-open"></i>'), {:action => 'show', :id => pin.id}) %>
          </div>
        </div>
      <% end %>
    </div>
    <nav id="page-nav">
      <a href="../?page=2"></a>
    </nav>
  </div>

</div>

