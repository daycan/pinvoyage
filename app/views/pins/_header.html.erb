  <%= form_tag searchpath, :class => "form-inline", :method => :get do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= button_tag(type: "submit", class: "btn btn-default") do %>
        <%= icon('search') %>
      <% end %> 
    </p>
  <% end %>

  <%= link_to :controller => 'cards', :action => 'new', :class => 'image_link' do %>
    <div data-toggle="tooltip" data-placement="bottom" title="Create a new pin" class="has_tooltip">
      <%= image_tag('AddButton.png', :alt => '<p>Add Pin</p>', :class => 'image_link' ) %>
    </div>  
  <% end %>
  <br><br>